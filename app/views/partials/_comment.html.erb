<div class="comments">
  <% comments.each do |comment| %>
    <div class="d-flex justify-content-between align-items-center">
      <p><span class="fw-bold"><%= comment.author.name %></span>: <%= comment.text %></p>
      <% if can? :destroy, comment %>
        <%= link_to 'Delete', user_post_comment_path(@user, comment.post, comment), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this comment?' }, class: "btn btn-danger" %>
      <% end %>          
    </div>
  <% end %>
</div>
