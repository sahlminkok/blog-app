<%= render "partials/user", user: @user %>

<div class="posts">
  <% @posts.each do |post| %>
    <a href="/users/<%= @user.id %>/posts/<%= post.id %>" class="user-post">
      <%= render 'partials/post', post: post %>
      <%= render "partials/comment", comments: post.five_most_recent_comments unless post.five_most_recent_comments.empty? %>
    </a>
  <% end %>
</div>

<%= link_to "Create a Post", new_user_post_path(@user, @post), class: "btn btn-secondary" %>
<%= link_to "Back", user_path(@user), class: "btn btn-secondary" %>
