<div class="post">
  <div class="post-title">
    <h6>Post #<%= @post.id %> by <%= @post.author.name %></h6>
    <p>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
  </div>
  <h3><%= @post.title %></h3>
  <h4><%= @post.text %></h4>
</div>

<%= render "partials/comment", comments: @post.comments %>

<div class="d-flex">
  <%= link_to "Add a comment", new_user_post_comment_path(@user, @post), class: "btn bg-primary text-white", style: "margin-right: 10px" %>
  <%= button_to 'Like', user_post_likes_path(@user, @post), method: :post, class: 'btn btn-success', style: "margin-right: 10px" %>
  <% if can? :destroy, @post %>
    <%= link_to 'Delete', user_post_path(@user, @post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this post?' }, class: "btn btn-danger", style: "margin-right: 10px" %>
  <% end %>
  <%= link_to "Back", user_posts_path(@post.author), class: "btn btn-secondary" %>
</div>
