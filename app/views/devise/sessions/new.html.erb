<h2 class="text-secondary text-center">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form text-secondary' }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'control-label mt-2' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label mt-2' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control mt-2' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="checkbox mt-2">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Log in", class: 'btn btn-primary w-100 mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
