<h2 class="text-secondary">Resend confirmation instructions</h2>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group row">
    <%= f.label :email, class: "col-form-label text-secondary" %>
    <div class="col-sm-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Resend confirmation instructions", class: "btn btn-primary mt-3" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
